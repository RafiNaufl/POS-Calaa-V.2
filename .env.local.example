# Next.js local environment example

# NextAuth configuration
NEXTAUTH_URL=http://127.0.0.1:3000
NEXTAUTH_SECRET=replace-with-a-long-random-string

# Backend JWT used for Express authMiddleware
JWT_SECRET=dev-secret
JWT_AUD=pos-app
JWT_ISS=pos-backend

# Database connection (choose one approach)
# Prefer a standard Postgres URL in development:
# DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/pos_db

# Or use discrete Postgres env vars (fallback if DATABASE_URL is absent):
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=pos_db

# Enable SSL for Postgres if needed (true/false)
PGSSL=false

# Backend development server port
BACKEND_PORT=4000

# Optional: During migration, proxy unmatched legacy calls via backend
# ENABLE_LEGACY_PROXY=false

# Disable Next.js telemetry locally
NEXT_TELEMETRY_DISABLED=1