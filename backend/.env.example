# Backend (Express) environment variables

# Server
BACKEND_PORT=4000

# CORS: comma-separated list of allowed origins (no trailing slashes)
CORS_ORIGIN="https://pos.example.com,https://staging.pos.example.com"

# JWT configuration
JWT_SECRET="replace-with-strong-random-secret"
JWT_AUD="pos-app"
JWT_ISS="pos-backend"

# Database
DATABASE_URL="postgres://user:password@host:5432/posdb"

# Midtrans (server-side only)
MIDTRANS_SERVER_KEY=""
MIDTRANS_MERCHANT_ID=""
MIDTRANS_IS_PRODUCTION="false"

# WhatsApp (Baileys) state directory for persisted sessions
WHATSAPP_SESSION_DIR="./.wa-session"

# Optional: Logging/diagnostics
NODE_ENV="production"

