# Backend (Express) environment variables

# Server
BACKEND_PORT=4000

# CORS: comma-separated list of allowed origins (no trailing slashes)
CORS_ORIGIN="https://pos.example.com,https://staging.pos.example.com"

# JWT configuration
# For Supabase migration: Set JWT_SECRET to Supabase Project JWT Secret
JWT_SECRET="replace-with-strong-random-secret"
JWT_AUD="pos-app" # For Supabase: 'authenticated'
JWT_ISS="pos-backend" # For Supabase: 'https://<project>.supabase.co/auth/v1'

# Database
DATABASE_URL="postgres://user:password@host:5432/posdb"
# For Migration:
OLD_DATABASE_URL="postgres://user:password@oldhost:5432/olddb"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Midtrans (server-side only)
MIDTRANS_SERVER_KEY=""
MIDTRANS_MERCHANT_ID=""
MIDTRANS_IS_PRODUCTION="false"

# WhatsApp (Baileys) state directory for persisted sessions
WHATSAPP_SESSION_DIR="./.wa-session"

# Optional: Logging/diagnostics
NODE_ENV="production"
