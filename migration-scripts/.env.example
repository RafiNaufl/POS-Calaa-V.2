# Database Configuration
# Konfigurasi database untuk migrasi

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pos_app
DB_USER=root
DB_PASSWORD=your_password_here
DB_DIALECT=mysql

# Alternative for PostgreSQL
# DB_DIALECT=postgres
# DB_PORT=5432

# Migration Settings
# Pengaturan untuk proses migrasi

# Batch size untuk migrasi data (records per batch)
MIGRATION_BATCH_SIZE=1000

# Timeout untuk operasi database (milliseconds)
MIGRATION_TIMEOUT=30000

# Enable/disable logging
ENABLE_LOGGING=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Backup Settings
# Pengaturan backup otomatis

# Auto backup sebelum migrasi
AUTO_BACKUP=true

# Directory untuk menyimpan backup
BACKUP_DIR=./backups

# Maksimal file backup yang disimpan
MAX_BACKUP_FILES=10

# Sequelize Settings
# Pengaturan khusus Sequelize

# Connection pool settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Timezone
DB_TIMEZONE=+07:00

# SSL Settings (untuk production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Prisma Settings
# Pengaturan untuk koneksi Prisma (source database)

# Prisma database URL (jika berbeda dari Sequelize)
PRISMA_DATABASE_URL="mysql://root:password@localhost:3306/pos_app"

# Migration Control
# Kontrol proses migrasi

# Skip validation (tidak disarankan untuk production)
SKIP_VALIDATION=false

# Dry run mode (simulasi tanpa eksekusi)
DRY_RUN=false

# Force mode (override safety checks)
FORCE_MODE=false

# Parallel processing
ENABLE_PARALLEL=false
PARALLEL_WORKERS=4

# Performance Settings
# Pengaturan performa

# Memory limit untuk large datasets (MB)
MEMORY_LIMIT=1024

# Query timeout (seconds)
QUERY_TIMEOUT=60

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5000

# Monitoring & Alerts
# Monitoring dan notifikasi

# Enable progress reporting
ENABLE_PROGRESS_REPORT=true

# Progress report interval (seconds)
PROGRESS_INTERVAL=30

# Email notifications (optional)
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=admin@yourcompany.com

# Slack notifications (optional)
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Settings
# Pengaturan untuk development

# Environment
NODE_ENV=development

# Debug mode
DEBUG=false

# Verbose logging
VERBOSE=false

# Test mode
TEST_MODE=false

# Security Settings
# Pengaturan keamanan

# Encryption key untuk sensitive data
ENCRYPTION_KEY=your-32-character-secret-key-here

# API keys (jika diperlukan)
API_KEY=your-api-key-here

# JWT secret (jika menggunakan authentication)
JWT_SECRET=your-jwt-secret-here

# File Paths
# Path untuk file dan directory

# Path ke Prisma schema
PRISMA_SCHEMA_PATH=../prisma/schema.prisma

# Path ke Sequelize models
SEQUELIZE_MODELS_PATH=../sequelize-models-example

# Temporary directory
TEMP_DIR=./temp

# Log directory
LOG_DIR=./logs

# Advanced Settings
# Pengaturan lanjutan

# Custom date format
DATE_FORMAT=YYYY-MM-DD HH:mm:ss

# Locale settings
LOCALE=id-ID

# Currency settings
CURRENCY=IDR

# Decimal precision
DECIMAL_PRECISION=2

# Validation Settings
# Pengaturan validasi

# Strict mode validation
STRICT_VALIDATION=true

# Check foreign key constraints
CHECK_FOREIGN_KEYS=true

# Validate data integrity
VALIDATE_DATA_INTEGRITY=true

# Check for orphaned records
CHECK_ORPHANED_RECORDS=true

# Performance Monitoring
# Monitoring performa

# Enable performance metrics
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Memory usage threshold (MB)
MEMORY_THRESHOLD=800

# CPU usage threshold (%)
CPU_THRESHOLD=80

# Cleanup Settings
# Pengaturan pembersihan

# Auto cleanup temporary files
AUTO_CLEANUP=true

# Cleanup interval (hours)
CLEANUP_INTERVAL=24

# Keep log files (days)
KEEP_LOGS_DAYS=30

# Keep backup files (days)
KEEP_BACKUPS_DAYS=7